{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "[üêç] GENERATE PY MODELS from schema",
      "type": "python",
      "pythonPath": "${workspaceFolder}/.venv/bin/python",
      "request": "launch",
      "module": "datamodel_code_generator",
      "args": [
        "--input",
        "./ingestion-workflow-model-schemas",
        "--input-file-type",
        "jsonschema",
        "--disable-timestamp",
        "--use-subclass-enum",
        "--use-exact-imports",
        "--output",
        "./avelbot-ingestion-py/src/avelbot_ingestion/models/"
      ],
      "env": {
        "PYTHONUNBUFFERED": "1"
      },
      "cwd": "${workspaceFolder}/",
      "console": "integratedTerminal"
    },
    {
      "name": "[üêç] Trigger - Part 2 - Indexing pages",
      "type": "python",
      "pythonPath": "${workspaceFolder}/.venv/bin/python",
      "request": "launch",
      "program": "${workspaceFolder}/avelbot-ingestion-py/src/avelbot_ingestion/runners/trigger_ingestion_workflow.py",
      "args": [
        "--workflow-input-yaml=part2-vect_pages_with_temporal.yml"
      ],
      "env": {
        "PYTHONUNBUFFERED": "1",
        "LOGGING_ENV": "DEV",
        "LOGGING_LEVEL": "DEBUG",
        "TEMPORAL_LOGGING_LEVEL": "INFO"
      },
      "cwd": "${workspaceFolder}/avelbot-ingestion-py/ressources/workflow_inputs/",
      "console": "integratedTerminal"
    },
    {
      "name": "[üêç] Main Worker",
      "type": "debugpy",
      "request": "launch",
      "pythonPath": "${workspaceFolder}/.venv/bin/python",
      "program": "${workspaceFolder}/avelbot-ingestion-py/src/avelbot_ingestion/worker/main_worker.py",
      "args": [],
      "env": {
        "DEV_USE_UNSANDBOXED_WORKFLOW_RUNNER": "1"
      },
      "envFile": "${workspaceFolder}/.env",
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal"
    },
    {
      "name": "[üî∑] GENERATE TS MODELS",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npx",
      "runtimeArgs": [
        "tsx",
        "generate_model.ts"
      ],
      "cwd": "${workspaceFolder}/avelbot-ingestion-ts/src/",
      "console": "integratedTerminal"
    },
    {
      "name": "[üî∑] Worker TS",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "${env:HOME}/.nvm/versions/node/v20.19.0/bin/npm",
      "runtimeArgs": [
        "run",
        "startDefaultWorker.watch",
      ],
      "cwd": "${workspaceFolder}/avelbot-ingestion-ts/",
      "console": "integratedTerminal"
    }
  ]
}